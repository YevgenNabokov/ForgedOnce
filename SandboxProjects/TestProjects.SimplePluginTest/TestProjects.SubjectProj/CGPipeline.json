{
  "codeFileHandlers": [
    { "type": "ForgedOnce.CSharp.CSharpCodeFileHandlerFactory, ForgedOnce.CSharp" }
  ],
  "inputs": {
    "InputOne": "CSharp:Project:TestProjects.SubjectProj/SourceModels/*.cs"
  },
  "batches": [
    {
      "name": "Batch01",
      "stages": [
        {
          "name": "Stage01",
          "plugin": {
            "pluginFactory": { "type": "TestProjects.SimplePlugin.AddSerializableAttributeToClassPluginFactory, TestProjects.SimplePlugin" }
          },
          "input": {
            "settings": {
              "InputOne": "*.cs"
            }
          },          
          "mappings": {
            "PassThrough": {
              "settings": { "path": "TestProjects.ProductProj/TransformedModels" }
            }
          }
        }
      ]
    },
    {
      "name": "Batch02",
      "stages": [
        {
          "name": "Stage02",
          "plugin": {
            "pluginFactory": { "type": "TestPlugins.AddProperty.AddPropertyPluginFactory, TestPlugins.AddProperty" }
          },
          "input": {
            "settings": {
              "PassThrough": "*.cs"
            }
          },
          "output": {
            "settings": {
              "PassThrough": "*.cs"
            }
          },
          "mappings": {
            "PassThrough": {
              "settings": { "path": "TestProjects.ProductProj/TransformedModels" }
            }
          }
        }
      ]
    }
  ]
}
